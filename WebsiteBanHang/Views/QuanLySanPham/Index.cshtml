@using WebsiteBanHang.Models;
@model IEnumerable<SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    //Khởi tạo control WebGrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}

@*Thể hiện dữ liệu thông qua control webGrid*@
@grid.GetHtml(
    tableStyle: "divTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaSP", "Mã sản phẩm"),
    grid.Column("TenSP", "Tên SP"),
     grid.Column("DonGia", "Đơn Giá"),
      grid.Column("SoLuongTon", "Số lượng"),
    grid.Column("HinhAnh", "Hình ảnh", format: p => @Html.Raw("<img width=\"100\" height=\"100\" src=\"../Content/images/" + p.HinhAnh + "\">")),
        grid.Column(format: p => @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id = p.MaSP })),
    grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.MaSP }))
    ))

    


@*Css cho từng Style của table*@
<style>
    .divTable {
        text-align: center;
        border: 1px solid #999999;
        width: 100%;
    }

    .gridHead {
        background-color: Green;
        text-align: center;
    }

        .gridHead th {
            text-align: center;
        }

        .gridHead > th > a {
            color: #fff;
        }

    .gridFooter {
        text-align: center;
        font-weight: bold;
        font-size: 20px;
    }

    .gridRow {
        color: #000;
        text-align: center;
        border: 1px solid #999999;
    }

        .gridRow td {
            color: #000;
            border: 1px solid #999999;
        }


    .gridAltRow {
        color: #000;
        text-align: center;
    }

        .gridAltRow td {
            border: 1px solid #999999;
        }
</style>
