@using CaptchaMvc.HtmlHelpers;
@using CaptchaMvc;

@using WebsiteBanHang.Models
@model ThanhVien
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

<div class="DangKy">
    <div class=" register">
        <h1>Đăng ký thành viên</h1>
        <h1 style="color:red;"> @ViewBag.ThongBao</h1>
        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true)
            <div class="col-md-6 register-top-grid">
                <h3>Thông tin cá nhân</h3>
                <div class="titleclass">
                    <span>@Html.LabelFor(model => model.TaiKhoan, new { @class = "label" })</span>
                    @Html.TextBoxFor(model => model.TaiKhoan)
                    @Html.ValidationMessageFor(model => model.TaiKhoan)
                </div>
                <div class="titleclass">
                    <span>@Html.LabelFor(model => model.HoTen, new { @class = "label" })</span>
                    @Html.TextBoxFor(model => model.HoTen)
                    @Html.ValidationMessageFor(model => model.HoTen)
                </div>
                <div class="titleclass">
                    <span>@Html.LabelFor(model => model.DiaChi, new { @class = "label" })</span>
                    @Html.TextBoxFor(model => model.DiaChi)
                    @Html.ValidationMessageFor(model => model.DiaChi)
                </div>
                <div class="titleclass">
                    <span>@Html.LabelFor(model => model.Email, new { @class = "label" }) </span>
                    @Html.TextBoxFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <div class="titleclass">
                    <span>@Html.LabelFor(model => model.SoDienThoai, new { @class = "label" }) </span>
                    @Html.TextBoxFor(model => model.SoDienThoai)
                    @Html.ValidationMessageFor(model => model.SoDienThoai)
                </div>
            </div>
            <div class="col-md-6 register-bottom-grid register-top-grid">
                <h3>Thông tin đăng nhập</h3>
                <div class="titleclass">
                    <span>@Html.LabelFor(model => model.MatKhau, new { @class = "label" }) </span>
                    @Html.PasswordFor(model => model.MatKhau)
                    @Html.ValidationMessageFor(model => model.MatKhau)
                </div>
                <div class="titleclass">
                    <span>@Html.Label("Nhập lại mật khẩu", new { @class = "label" })</span>
                    @Html.Password("NhapLaiMatKhau")
                </div>
                <div class="titleclass">
                    <span>@Html.Label("Câu hỏi bí mật", new { @class = "label" })</span>
                    @Html.DropDownList("CauHoi", null, new { @class = "form-control" })
                </div>
                <div class="titleclass">
                    <span>@Html.LabelFor(model => model.CauTraLoi, new { @class = "label" }) </span>
                    @Html.TextBoxFor(model => model.CauTraLoi)
                    @Html.ValidationMessageFor(model => model.CauTraLoi)
                </div>
                <div class="titleclass">
                   
                    @Html.HiddenFor(model => model.MaLoaiTV, new { Value=4})
                    @Html.ValidationMessageFor(model => model.MaLoaiTV)
                </div>
                <div class="titleclass">
                    @Html.MathCaptcha()
                </div>
                <input value="Xác nhận" type="submit">
            </div>
            <div class="clearfix"> </div>
        }
    </div>
</div>

<style>
    .titleclass {
        margin-top: 1%;
        text-align: left;
    }

    .label {
        color: red;
        font-size: 18px;
        font-style: italic;
    }
</style>
<script>
    $(".titleclass").find("a").prop("href", "#a");
</script>

