@model IEnumerable<WebsiteBanHang.Models.SanPham>
@{
    ViewBag.Title = "DSSPHetHang";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    //Khởi tạo control WebGrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 4);
}
<h2>Danh sách các sản phẩm gần hết hàng</h2>
<br /><br />
@*Thể hiện dữ liệu thông qua control webGrid*@
@grid.GetHtml(
    tableStyle: "divTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaSP", "Mã sản phẩm"),
    grid.Column("TenSP", "Tên SP"),
    grid.Column("HinhAnh", "Hình ảnh", format: p => @Html.Raw("<img width=\"100\" height=\"100\" src=\"../Content/images/" + p.HinhAnh + "\">")),
    grid.Column(format: p => @Html.ActionLink("Nhập hàng", "NhapHangDon", new { id = p.MaSP }, new { @target = "_blank" }))

    ))


@*Css cho từng Style của table*@
<style>
    .divTable {
        width: 100%;
        border: 1px solid #999999;
        text-align:center;
    }

        .divTable td {
            border: 1px solid #999999;
           
        }

    .gridHead th {
        background-color: Green;
        text-align: center;
    }

        .gridHead > th > a {
            color: #fff;
            text-align: center;
        }

    .gridFooter {
        font-weight: bold;
        text-align: center;
    }
